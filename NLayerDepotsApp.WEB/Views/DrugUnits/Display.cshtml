@model NLayerDepotsApp.WEB.Models.DrugUnitIndexViewModel
@using NLayerDepotsApp.WEB.Helpers
@{
    ViewBag.Title = "Display";
}

<h3>List of drug units</h3>
<table class="table-bordered text-center">
    <thead>
        <tr>
            <th><p>Drug unit id</p></th>
            <th><p>Depot name</p></th>
            <th><p>Drug type</p></th>
            <th><p>Action</p></th>
        </tr>
    </thead>
    @foreach (var d in Model.DrugUnits)
    {
        <tr>
            <td><p>@d.DrugUnitId</p></td>
            @if (d.DepotName != null)
            {
                <td><p>@d.DepotName</p></td>
            }
            else
            {
                <td><p>---</p></td>
            }
            <td><p>@d.DrugTypeName</p></td>
            <td>@Html.ActionLink("Edit depot", "EditDrugUnit", new { id = d.DrugUnitId })</td>
        </tr>
    }
</table>
<br/>
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Display", new { page = x}))
</div>


