
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>List of depots:</h2>
    <table class="table-bordered table-striped">
        <thead>
            <tr>
                <th><p>Depot id</p></th>
                <th><p>Depot name</p></th>
                <th><p>Action</p></th>
            </tr>
        </thead>
        @foreach (var d in Model)
            {
            <tr>
                <td><p>@d.DepotId</p></td>
                <td><p>@d.DepotName</p></td>
                <td>@Html.ActionLink("Select depot", "Send", new { id = d.DepotId })</td>
            </tr>
        }
    </table>
</div>