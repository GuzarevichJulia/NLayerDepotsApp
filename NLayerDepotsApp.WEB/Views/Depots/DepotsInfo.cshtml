@model IEnumerable<NLayerDepotsApp.WEB.Models.DepotsInfoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Depots and all the drug units from each depot : </h2>

    <table class="table-bordered text-center">
        <thead>
            <tr>
                <th class="text-center"><p>Depot name</p></th>
                <th class="text-center"><p>Country name</p></th>
                <th class="text-center"><p>Drug type name</p></th>
                <th class="text-center"><p>Drug unit id</p></th>
                <th class="text-center"><p>Pick number</p></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td><p>   @item.DepotName</p></td>
                <td><p>   @item.CountryName</p></td>
                @if (item.DrugUnitId != null)
                {
                    <td><p>   @item.DrugTypeName</p></td>
                    <td><p>   @item.DrugUnitId</p></td>
                    <td><p>   @item.PickNumber</p></td>
                }
                else
                {
                    <td><p>---</p></td>
                    <td><p>---</p></td>
                    <td><p>---</p></td>
                }
            </tr>
        }
    </table>
</div>
