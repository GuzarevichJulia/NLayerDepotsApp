@model NLayerDepotsApp.WEB.Models.ShipmentViewModel
@{
    ViewBag.Title = "DisplayShippedDrugs";
}

<h2>Shipped drug unit(s) : </h2>

<table class="table-bordered text-center">
    <thead>
        <tr>
            <th><p>Drug unit id</p></th>
        </tr>
    </thead>

    @foreach (var d in Model.ShippedList)
    {
        <tr>
            <td><p>@d</p></td>
        </tr>
    }
</table>

@if (Model.UnshippedDictionary.Count > 0)
{
    <h2>Unshipped drug unit(s) : </h2>
    <table class="table-bordered text-center">
        <thead>
            <tr>
                <th><p>Drug type</p></th>
                <th><p>Quantity</p></th>
            </tr>
        </thead>

        @foreach (var d in Model.UnshippedDictionary)
        {
            <tr>
                <td><p>@d.Key</p></td>
                <td><p>@d.Value</p></td>
            </tr>
        }
    </table>
} 